<Window x:Class="Task2_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel>
        <Label x:Name="lblJSONfromHTTP" Margin="10"></Label>
        <Button x:Name="btnGetJSONAsync" Click="BtnGetJSON_ClickAsync">Get JSON Async</Button>
        <Button x:Name="btnGetJSON" Click="btnGetJSON_Click">Get JSON Sync</Button>
        <Button x:Name="btnClear" Click="btnClear_Click">Clear label</Button>
        </StackPanel>
    </Grid>
</Window>
